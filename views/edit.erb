<form class="form" action="/memos/<%= @memo['id'] %>" method="post" enctype="multipart/form-data">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="title">タイトル</label>
    <input class="form-control" type="text" name="title" value="<%= @memo['title'] %>" id="title">
  </div>

  <div class="form-group">
    <label for="content">内容</label>
    <textarea class="form-control" name="content" cols=50 rows=10 id="content" required><%= @memo['content'] %></textarea>
  </div>

  <input class="btn btn-primary" type="submit" value="保存">
</form>
